{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/*",
    "src/**/*"
  ]
}
